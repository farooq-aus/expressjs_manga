{% extends 'base.njk' %}
{% block title %}
    {{ chapter }}:{{ manga }}
{% endblock title %}
{% block content %}
    <div class="fixed-top m-5 alert alert-danger alert-dismissible collapse last" role="alert">
        <strong>last chapter reached</strong>
            <a class="close" href="" onclick="$('.last').hide()"><span class="material-icons">close</span></a>
        </button>
    </div>
    <div class="fixed-top m-5 alert alert-danger alert-dismissible collapse first" role="alert">
        <strong>no previous chapter</strong>
            <a class="close" href="" onclick="$('.first').hide()"><span class="material-icons">close</span></a>
        </button>
    </div>
    <div class="fixed-bottom d-inline-flex justify-content-between align-items-center px-2">
        <a class="btn btn-outline-primary" {% if prev=='no' %}onclick="first()" href="" {% else %}href="/{{ manga | replace(' ','_') }}/{% if prev | float < 9 %}00{% elif prev | float < 99 %}0{% endif %}{{ prev }}"{% endif %} ><span class="material-icons">skip_previous</span></a>
        <div class="text-primary bg-dark rounded">
            <select class="form-select-sm bg-dark text-primary" id="pageselect" onchange="location = this.value;">
                {% for page in range(1, output.length+1) %}
                    <option value="#{{ page }}">{{ page }}</option>
                {% endfor %}
            </select>&nbsp; / {{ output.length }} &nbsp;
        </div>
        <a class="btn btn-outline-primary" {% if next=='no' %}onclick="last()" href="" {% else %}href="/{{ manga | replace(' ','_') }}/{% if next | float < 9 %}00{% elif next | float < 99 %}0{% endif %}{{ next }}"{% endif %} ><span class="material-icons">skip_next</span></a>
    </div>

    <div class="d-flex flex-column justify-content-center align-items-center my-4">
        {% for page in output %}
            <img class="img-fluid p-1" src="{{ page }}" id="{{ loop.index }}" loading="lazy">
            {{ loop.index }}<br>
        {% endfor %}
    </div>
    <br><br>
    {% if prev==='no' or next==='no' %}
        <script type="text/javascript">
            function last() {
                $('.last').show();
            }
            function first() {
                $('.first').show();
            }
        </script>
    {% endif %}
{% endblock content %}